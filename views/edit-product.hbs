<div class="form-control">
    <form action="/admin/edit-product" method="POST" enctype="multipart/form-data">
        <div class="form-input">
            <label for="product-name">Product Name</label>
            <input type="text" name="productName" value="{{product.name}}">
        </div>
        <div class="form-input">
            <label for="product-img">Product Image</label>
            <input type="file" name="productImg">
        </div>
        <div class="form-input">
            <label for="product-price">Product Price</label>
            <input type="number" name="productPrice" value="{{product.price}}">
        </div>
        <div class="form-input">
            <label for="product-desc">Product Description</label>
            <textarea name="productDesc">{{product.description}}</textarea>
        </div>
        <div class="input-submit-button">
            <input type="hidden" name="productId" value="{{product._id}}">
            <input type="submit" value="Save Changes" name="submit">
        </div>
    </form>
</div>