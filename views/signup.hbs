{{> navigation}}
<div class="form-control">
    <form action="/signup" method="post">
        <div class="form-input">
            <label for="login-username">Email</label>
            <input type="text" name="email" {{#if errorEmail}} class="redBorder" {{/if}} {{#if isError}}
                value="{{email}}" {{/if}}>
        </div>
        <div class="form-input">
            <label for="login-password">Password</label>
            <input type="password" name="password" {{#if errorPassword}} class="redBorder" {{/if}}{{#if
                isError}}value="{{password}}" {{/if}}>
        </div>
        <div class="form-input">
            <label for="login-password-confirm">Confirm Password</label>
            <input type="password" name="confirmPassword" {{#if errorPasswordConfirm}} class="redBorder" {{/if}}{{#if
                isError}}value="{{passwordConfirm}}" {{/if}}>
        </div>
        <div class="input-submit-button">
            <input type="submit" value="Sign Up" name="signup">
        </div>
    </form>

</div>
{{#if errorMessage}}
<div class="errors">
    {{errorMessage}}
</div>
{{/if}}